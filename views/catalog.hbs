<div class="row">
    <h1>Catalog</h1>
</div>

<div class="row">
    <ul class="list-group">
        {{#each results}}
        <a href="/detail/{{this.book_id}}">
            <li class="list-group-item">{{this.title}}</li>
        </a>
        {{/each}}
    </ul>
</div>

<div class="d-flex justify-content-between mb-5">
    {{#if prevPage}}
    <a href="/catalog/{{idx}}/{{prevPage}}" class="btn btn-primary">Previous</a>
    {{else}}
    <a href="#" class="btn btn-danger disabled">Previous</a>
    {{/if}}
    <a href="/" class="btn btn btn-info">
        <svg class="bi" width="16" height="16" fill="currentColor">
            <use xlink:href="/assets/bootstrap-icons.svg#house" />
        </svg>
        Home
    </a>
    {{#if finalPage}}
    <a href="/catalog/{{idx}}/{{nextPage}}" class="btn btn-primary">Next</a>
    {{else}}
    <a href="#" class="btn btn-danger disabled">Next</a>
    {{/if}}
</div>