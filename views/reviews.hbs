<div class="row">
    <div class="col">
        <h1>{{results.[0].book_title}}</h1>
        <h5>{{results.[0].book_author}}</h5>
    </div>
</div>
{{#each results}}
<div class="card">
    <div class="card-body">
        <div class="d-flex justify-content-between">
            <blockquote class="blockquote mb-0">
                <p>{{this.summary}}</p>
                <footer class="blockquote-footer"><cite title="Source Title">{{this.byline}}</cite></footer>
            </blockquote>
            <a href="{{this.url}}" target="_blank" class="btn btn-primary">Full review</a>
        </div>
    </div>
    <div class="card-footer text-muted">
        {{publication_dt}}
    </div>
</div>
{{/each}}